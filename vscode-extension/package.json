{
  "name": "chatgpt-vscode-bridge",
  "displayName": "ChatGPT Bridge",
  "version": "1.0.0",
  "description": "ChatGPT integration via local API bridge",
  "publisher": "chatgpt-bridge",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chatgpt.ask"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatgpt.ask",
        "title": "ChatGPT: Ask Question"
      }
    ],
    "configuration": {
      "title": "ChatGPT",
      "properties": {
        "chatgpt.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Local API server URL"
        }
      }
    }
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
